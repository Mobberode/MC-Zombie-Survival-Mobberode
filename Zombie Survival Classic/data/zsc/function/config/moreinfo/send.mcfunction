##Send Info
execute if score @s zsc.player.config.moreinfo matches 1 run title @s actionbar ["Wave: ",{score:{name:"#Score",objective:"zs.wave"}}," | Mobs: ",{score:{name:"#Active",objective:"zsc.mob.amount"}}," | Lives: ",{score:{name:"#Score",objective:"zsc.team.lives"}}]
#Nerd Mode
execute if score @s zsc.player.config.moreinfo matches 2.. run title @s actionbar ["Wave: ",{score:{name:"#Score",objective:"zs.wave"}}," | Mobs: ",{score:{name:"#Active",objective:"zsc.mob.amount"}}," | Lives: ",{score:{name:"#Score",objective:"zsc.team.lives"}}," | Time: ",{score:{name:"#MinuteScore",objective:"zs.timer"}},":",{score:{name:"#Score",objective:"zs.timer"}},".",{score:{name:"#MiliScore",objective:"zs.timer"}}]